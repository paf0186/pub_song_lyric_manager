<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head', { site, themeCSS }) %>
    <title>Song List - <%= site.shortName %></title>
    <style>
        .qr-section {
            text-align: center;
            padding: 1.25rem 1rem;
            margin-bottom: 1rem;
            background: var(--card-bg);
            border-radius: 8px;
            box-shadow: var(--shadow);
        }
        .qr-section h3 {
            font-size: 0.875rem;
            color: var(--text-secondary);
            margin-bottom: 0.5rem;
        }
        .qr-section img {
            max-width: 120px;
            height: auto;
        }
        .song-number {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            min-width: 1.5rem;
            height: 1.5rem;
            padding: 0 0.375rem;
            margin-right: 0.625rem;
            background: var(--primary-color);
            color: white;
            font-size: 0.75rem;
            font-weight: 600;
            border-radius: 4px;
            flex-shrink: 0;
        }
        .sort-indicator {
            display: flex;
            align-items: center;
            justify-content: flex-end;
            gap: 0.5rem;
            padding: 0.5rem 0;
            margin-bottom: 0.5rem;
            font-size: 0.75rem;
            color: var(--text-secondary);
            cursor: pointer;
            transition: color 0.2s;
        }
        .sort-indicator:hover {
            color: var(--primary-color);
        }
        .sort-indicator svg {
            width: 14px;
            height: 14px;
        }
    </style>
</head>
<body>
    <%- include('partials/side-menu', { site, activePage: 'list' }) %>

    <!-- Header -->
    <header class="header">
        <div class="header-content">
            <button class="menu-btn" id="menuBtn" aria-label="Open menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <div style="display: flex; align-items: center; gap: 0.5rem; flex: 1; min-width: 0;">
                <h1 class="header-title" id="pageTitle" style="margin: 0; flex-shrink: 0;">Song List</h1>
                <% if (site.features.print) { %>
                <button id="printAllBtn" onclick="printAll()" style="display: none; background: none; border: none; padding: 0.375rem 0.75rem; color: var(--text-secondary); cursor: pointer; font-size: 0.8125rem; white-space: nowrap; border-radius: 4px; transition: background-color 0.2s, color 0.2s;" onmouseover="this.style.backgroundColor='var(--hover-bg)'; this.style.color='var(--text-primary)';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='var(--text-secondary)';" title="Print all songs in this list">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 14px; height: 14px; display: inline-block; vertical-align: middle; margin-right: 0.375rem;">
                        <path d="M6 9V2h12v7M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2M6 14h12v8H6z"/>
                    </svg>
                    <%= site.labels.printAll %>
                </button>
                <% } %>
                <% if (site.features.download) { %>
                <button id="downloadAllBtn" onclick="downloadAll()" style="display: none; background: none; border: none; padding: 0.375rem 0.75rem; color: var(--text-secondary); cursor: pointer; font-size: 0.8125rem; white-space: nowrap; border-radius: 4px; transition: background-color 0.2s, color 0.2s;" onmouseover="this.style.backgroundColor='var(--hover-bg)'; this.style.color='var(--text-primary)';" onmouseout="this.style.backgroundColor='transparent'; this.style.color='var(--text-secondary)';" title="Download all songs as text file">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="width: 14px; height: 14px; display: inline-block; vertical-align: middle; margin-right: 0.375rem;">
                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4M7 10l5 5 5-5M12 15V3"/>
                    </svg>
                    <%= site.labels.downloadAll %>
                </button>
                <% } %>
            </div>
            <% if (site.features.search) { %>
            <div class="search-container" style="position: relative;">
                <input type="search" class="search-input" id="searchInput" placeholder="<%= site.labels.searchPlaceholder %>">
                <div class="search-hint" id="searchHint" style="display: none;">
                    <%= site.labels.searchHint %>
                </div>
            </div>
            <% } %>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <% if (site.features.qrCodes) { %>
        <!-- QR Code Section at Top -->
        <div class="qr-section" id="qrSection">
            <h3><%= site.labels.shareThisList %></h3>
            <img id="qrCode" src="" alt="QR Code">
        </div>
        <% } %>

        <!-- Sort Order Indicator (only shown for numbered lists) -->
        <div class="sort-indicator" id="sortIndicator" style="display: none;" onclick="toggleSortOrder()" title="Click to toggle sort order">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 6h18M3 12h12M3 18h6"/>
            </svg>
            <span id="sortIndicatorText">Numbered order</span>
        </div>

        <div class="song-list" id="songList">
            <!-- Songs will be loaded here -->
        </div>
        <div class="empty-state" id="emptyState" style="display: none;">
            <h3 id="emptyStateTitle"><%= site.labels.noSongsFound %></h3>
            <p id="emptyStateMessage"><%= site.labels.emptyList %></p>
        </div>
        <div class="empty-state" id="notFoundState" style="display: none;">
            <h3>List not found</h3>
            <p>This song list doesn't exist. <a href="<%= site.basePath %>/">Go home</a></p>
        </div>

        <% if (site.features.statistics) { %>
        <!-- List Statistics (at bottom) -->
        <div id="listStatsSection" style="margin-top: 1.5rem; padding: 1rem; background: var(--card-bg); border-radius: 8px; box-shadow: var(--shadow); text-align: left; display: none;">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div>
                    <div style="font-size: 0.75rem; font-weight: 600; color: var(--text-secondary);">LIST VIEWS</div>
                    <div style="font-size: 1.25rem; font-weight: 600; color: var(--primary-color); margin-top: 0.25rem;" id="listViewCount">-</div>
                </div>
                <div id="topSongsInList" style="flex: 1; margin-left: 2rem;">
                    <div style="font-size: 0.75rem; font-weight: 600; color: var(--text-secondary); margin-bottom: 0.5rem;">TOP SONGS IN THIS LIST</div>
                    <div id="topSongsInListContent" style="font-size: 0.8125rem;"></div>
                </div>
            </div>
        </div>
        <% } %>
    </main>

    <!-- Toast Container -->
    <div class="toast-container" id="toastContainer"></div>

    <script>
        let listId = null;
        let listData = null;
        let songs = [];
        let expandedCardId = null;
        let useNumberedOrder = true;
        const basePath = window.siteConfig.basePath;
        const labels = window.siteConfig.labels;
        const features = window.siteConfig.features;

        const menuBtn = document.getElementById('menuBtn');
        const sideMenu = document.getElementById('sideMenu');
        const menuOverlay = document.getElementById('menuOverlay');
        const menuItems = document.getElementById('menuItems');
        const searchInput = document.getElementById('searchInput');
        const songList = document.getElementById('songList');
        const emptyState = document.getElementById('emptyState');
        const notFoundState = document.getElementById('notFoundState');
        const pageTitle = document.getElementById('pageTitle');
        const toastContainer = document.getElementById('toastContainer');
        const sortIndicator = document.getElementById('sortIndicator');
        <% if (site.features.qrCodes) { %>
        const qrSection = document.getElementById('qrSection');
        const qrCode = document.getElementById('qrCode');
        <% } %>
        <% if (site.features.search) { %>
        const searchHint = document.getElementById('searchHint');
        <% } %>

        document.addEventListener('DOMContentLoaded', () => {
            const params = new URLSearchParams(window.location.search);
            listId = params.get('id');

            if (!listId) {
                showNotFound();
                return;
            }

            loadList();
            loadMenuLists();
            setupEventListeners();
            <% if (site.features.search) { %>showSearchHint();<% } %>
            handleHashNavigation();
        });

        function setupEventListeners() {
            menuBtn.addEventListener('click', toggleMenu);
            menuOverlay.addEventListener('click', closeMenu);
            <% if (site.features.search) { %>
            searchInput.addEventListener('input', debounce(handleSearch, 300));
            <% } %>
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') closeMenu();
            });
        }

        <% if (site.features.search) { %>
        function showSearchHint() {
            if (localStorage.getItem('searchHintDismissed')) return;

            setTimeout(() => {
                searchHint.style.display = 'block';

                const dismissHint = () => {
                    searchHint.classList.add('hiding');
                    setTimeout(() => {
                        searchHint.style.display = 'none';
                    }, 200);
                    localStorage.setItem('searchHintDismissed', 'true');
                    document.removeEventListener('click', dismissHint);
                    document.removeEventListener('keydown', dismissHint);
                };

                document.addEventListener('click', dismissHint);
                document.addEventListener('keydown', dismissHint);
            }, 500);
        }
        <% } %>

        function toggleMenu() {
            sideMenu.classList.toggle('active');
            menuOverlay.classList.toggle('active');
        }

        function closeMenu() {
            sideMenu.classList.remove('active');
            menuOverlay.classList.remove('active');
        }

        async function loadList() {
            try {
                const response = await fetch(`${basePath}/api/lists/${listId}`);

                if (!response.ok) {
                    showNotFound();
                    return;
                }

                listData = await response.json();
                songs = listData.songs;

                pageTitle.textContent = listData.name;
                document.title = `${listData.name} - Song Lyrics`;

                // Show sort indicator for numbered lists
                if (listData.useCustomOrder) {
                    sortIndicator.style.display = 'flex';
                } else {
                    sortIndicator.style.display = 'none';
                }

                highlightCurrentList();
                <% if (site.features.qrCodes) { %>loadQrCode();<% } %>
                renderSongs(songs);
                // Track list view
                fetch(`${basePath}/api/stats/list/${listId}`, { method: 'POST' }).catch(() => {});
                <% if (site.features.statistics) { %>loadListStats();<% } %>
            } catch (error) {
                console.error('Error loading list:', error);
                showNotFound();
            }
        }

        <% if (site.features.qrCodes) { %>
        async function loadQrCode() {
            try {
                const response = await fetch(`${basePath}/api/qr/${listId}`);
                const data = await response.json();
                qrCode.src = data.qrCode;
            } catch (error) {
                qrSection.style.display = 'none';
            }
        }
        <% } %>

        <% if (site.features.statistics) { %>
        async function loadListStats() {
            try {
                const response = await fetch(basePath + '/api/stats');
                const stats = await response.json();

                const listViews = stats.topLists.find(item => item.list.id === listId)?.views || 0;

                const songViewsInList = songs
                    .map(song => {
                        const views = stats.topSongs.find(item => item.song.id === song.id)?.views || 0;
                        return { song, views };
                    })
                    .filter(item => item.views > 0)
                    .sort((a, b) => b.views - a.views)
                    .slice(0, 3);

                if (listViews > 0 || songViewsInList.length > 0) {
                    document.getElementById('listStatsSection').style.display = 'block';
                    document.getElementById('listViewCount').textContent = listViews;

                    if (songViewsInList.length > 0) {
                        document.getElementById('topSongsInListContent').innerHTML = songViewsInList
                            .map(item => `
                                <div style="display: flex; justify-content: space-between; padding: 0.125rem 0;">
                                    <span>${escapeHtml(item.song.title)}</span>
                                    <span style="color: var(--text-secondary); margin-left: 1rem;">${item.views} view${item.views !== 1 ? 's' : ''}</span>
                                </div>
                            `).join('');
                    } else {
                        document.getElementById('topSongsInList').style.display = 'none';
                    }
                }
            } catch (error) {
                console.error('Error loading list stats:', error);
            }
        }
        <% } %>

        async function loadMenuLists() {
            try {
                const response = await fetch(basePath + '/api/lists');
                const lists = await response.json();
                renderMenuLists(lists);
            } catch (error) {
                console.error('Error loading lists:', error);
            }
        }

        function renderMenuLists(lists) {
            const listSection = menuItems.querySelector('.menu-section-title');
            const existingItems = menuItems.querySelectorAll('.menu-item.list-link');
            existingItems.forEach(item => item.remove());

            lists.forEach(list => {
                const link = document.createElement('a');
                link.href = `${basePath}/list.html?id=${list.id}`;
                link.className = 'menu-item list-link';
                if (list.id === listId) {
                    link.classList.add('active');
                }
                link.textContent = list.name;
                listSection.after(link);
            });
        }

        function highlightCurrentList() {
            document.querySelectorAll('.menu-item').forEach(item => {
                item.classList.remove('active');
                if (item.href && item.href.includes(`id=${listId}`)) {
                    item.classList.add('active');
                }
            });
        }

        function showNotFound() {
            songList.style.display = 'none';
            emptyState.style.display = 'none';
            <% if (site.features.qrCodes) { %>qrSection.style.display = 'none';<% } %>
            notFoundState.style.display = 'block';
        }

        function renderSongs(songsToRender) {
            if (songsToRender.length === 0) {
                songList.innerHTML = '';
                emptyState.style.display = 'block';
                notFoundState.style.display = 'none';
                <% if (site.features.print) { %>document.getElementById('printAllBtn').style.display = 'none';<% } %>
                <% if (site.features.download) { %>document.getElementById('downloadAllBtn').style.display = 'none';<% } %>

                const isSearching = searchInput && searchInput.value.trim().length > 0;
                if (isSearching) {
                    document.getElementById('emptyStateTitle').textContent = 'No matching songs';
                    document.getElementById('emptyStateMessage').textContent =
                        `No songs in this list match "${searchInput.value}". Try different keywords.`;
                } else if (songs.length === 0) {
                    document.getElementById('emptyStateTitle').textContent = 'Empty list';
                    document.getElementById('emptyStateMessage').textContent = labels.emptyList;
                }
                return;
            }

            emptyState.style.display = 'none';
            notFoundState.style.display = 'none';
            if (songs.length > 0) {
                <% if (site.features.print) { %>document.getElementById('printAllBtn').style.display = 'inline-block';<% } %>
                <% if (site.features.download) { %>document.getElementById('downloadAllBtn').style.display = 'inline-block';<% } %>
            }

            const showNumbers = listData && listData.useCustomOrder && useNumberedOrder;

            songList.innerHTML = songsToRender.map(song => {
                const songNumber = showNumbers ? songs.findIndex(s => s.id === song.id) + 1 : null;
                const numberBadge = songNumber ? `<span class="song-number">${songNumber}</span>` : '';

                return `
                <div class="song-card${expandedCardId === song.id ? ' expanded' : ''}" data-id="${song.id}">
                    <div class="song-header" onclick="toggleCard('${song.id}')">
                        ${numberBadge}<span class="song-title">${escapeHtml(song.title)}</span>
                        <svg class="expand-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="6 9 12 15 18 9"></polyline>
                        </svg>
                    </div>
                    <div class="song-lyrics">
                        <div class="lyrics-content">
                            <div class="lyrics-controls">
                                <button class="font-size-btn" onclick="changeFontSize('${song.id}', -1, event)" title="Decrease font size">
                                    <svg viewBox="0 0 24 24" stroke-width="2"><path d="M5 12h14"/></svg>
                                </button>
                                <button class="font-size-btn" onclick="changeFontSize('${song.id}', 1, event)" title="Increase font size">
                                    <svg viewBox="0 0 24 24" stroke-width="2"><path d="M12 5v14M5 12h14"/></svg>
                                </button>
                            </div>
                            <div class="lyrics-text" id="lyrics-${song.id}">${formatLyrics(song.lyrics)}</div>
                            <div class="lyrics-actions">
                                <% if (site.features.print) { %>
                                <button class="lyrics-action-btn" onclick="printLyrics('${song.id}', event)">
                                    <svg viewBox="0 0 24 24" stroke-width="2"><path d="M6 9V2h12v7M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2M6 14h12v8H6z"/></svg>
                                    <span class="btn-text">${labels.print}</span>
                                </button>
                                <% } %>
                                <% if (site.features.download) { %>
                                <button class="lyrics-action-btn" onclick="downloadLyrics('${song.id}', event)">
                                    <svg viewBox="0 0 24 24" stroke-width="2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4M7 10l5 5 5-5M12 15V3"/></svg>
                                    <span class="btn-text">${labels.download}</span>
                                </button>
                                <% } %>
                                <button class="lyrics-action-btn" onclick="copyLyrics('${song.id}', event)">
                                    <svg viewBox="0 0 24 24" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
                                    <span class="btn-text">${labels.copy}</span>
                                </button>
                                <button class="lyrics-action-btn" onclick="shareSong('${song.id}', event)">
                                    <svg viewBox="0 0 24 24" stroke-width="2"><path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8M16 6l-4-4-4 4M12 2v13"/></svg>
                                    <span class="btn-text">${labels.shareLink}</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>`;
            }).join('');
        }

        function toggleCard(id) {
            if (expandedCardId === id) {
                expandedCardId = null;
                history.replaceState(null, '', window.location.pathname + window.location.search);
            } else {
                expandedCardId = id;
                history.replaceState(null, '', `${window.location.pathname}?id=${listId}#song-${id}`);
                fetch(`${basePath}/api/stats/song/${id}`, { method: 'POST' }).catch(() => {});
            }

            document.querySelectorAll('.song-card').forEach(card => {
                if (card.dataset.id === expandedCardId) {
                    card.classList.add('expanded');
                    if (expandedCardId) {
                        setTimeout(() => {
                            card.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                        }, 100);
                    }
                } else {
                    card.classList.remove('expanded');
                }
            });
        }

        function handleHashNavigation() {
            const hash = window.location.hash;
            if (hash && hash.startsWith('#song-')) {
                const songId = hash.substring(6);
                const checkSongs = setInterval(() => {
                    if (songs.length > 0) {
                        clearInterval(checkSongs);
                        const song = songs.find(s => s.id === songId);
                        if (song) {
                            toggleCard(songId);
                        }
                    }
                }, 100);
            }
        }

        function toggleSortOrder() {
            if (!listData || !listData.useCustomOrder) return;

            useNumberedOrder = !useNumberedOrder;

            const indicatorText = document.getElementById('sortIndicatorText');
            indicatorText.textContent = useNumberedOrder ? 'Numbered order' : 'Alphabetical order';

            if (useNumberedOrder) {
                renderSongs(songs);
            } else {
                const sortedSongs = [...songs].sort((a, b) => a.title.localeCompare(b.title));
                renderSongs(sortedSongs);
            }
        }

        <% if (site.features.search) { %>
        async function handleSearch() {
            const query = searchInput.value.trim();

            if (!query) {
                renderSongs(songs);
                return;
            }

            try {
                const response = await fetch(`${basePath}/api/search?q=${encodeURIComponent(query)}&listId=${listId}`);
                const results = await response.json();
                renderSongs(results);
            } catch (error) {
                console.error('Error searching:', error);
            }
        }
        <% } %>

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        function formatLyrics(text) {
            const safe = escapeHtml(text);
            return safe.replace(/\*([^*]+)\*/g, '<em>$1</em>');
        }

        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.textContent = message;
            toastContainer.appendChild(toast);
            setTimeout(() => toast.remove(), 3000);
        }

        function getSongById(id) {
            return songs.find(s => s.id === id);
        }

        <% if (site.features.print) { %>
        function printLyrics(songId, event) {
            event.stopPropagation();
            const song = getSongById(songId);
            if (!song) return;

            const printWindow = window.open('', '_blank');
            printWindow.document.write(`
                <!DOCTYPE html>
                <html>
                <head>
                    <title>${escapeHtml(song.title)}</title>
                    <style>
                        body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; padding: 2rem; }
                        h1 { font-size: 1.5rem; margin-bottom: 1.5rem; }
                        pre { white-space: pre-wrap; font-family: inherit; font-size: 1rem; line-height: 1.8; }
                    </style>
                </head>
                <body>
                    <h1>${escapeHtml(song.title)}</h1>
                    <pre>${formatLyrics(song.lyrics)}</pre>
                </body>
                </html>
            `);
            printWindow.document.close();
            printWindow.print();
        }

        function printAll() {
            if (songs.length === 0) return;

            const listName = document.getElementById('pageTitle').textContent;
            const printWindow = window.open('', '_blank');
            const sortedSongs = [...songs].sort((a, b) => a.title.localeCompare(b.title));

            printWindow.document.write(`
                <!DOCTYPE html>
                <html>
                <head>
                    <title>${escapeHtml(listName)}</title>
                    <style>
                        @page { size: letter; margin: 0.75in; }
                        body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; font-size: 11pt; line-height: 1.6; }
                        h1 { font-size: 18pt; margin-bottom: 0.5in; text-align: center; border-bottom: 2px solid #333; padding-bottom: 0.25in; }
                        .song { page-break-inside: avoid; margin-bottom: 0.5in; }
                        .song-title { font-size: 14pt; font-weight: bold; margin-bottom: 0.15in; }
                        .song-lyrics { white-space: pre-wrap; font-size: 11pt; line-height: 1.8; }
                        .page-break { page-break-after: always; }
                        @media print { .no-print { display: none; } }
                    </style>
                </head>
                <body>
                    <h1>${escapeHtml(listName)}</h1>
                    ${sortedSongs.map((song, index) => `
                        <div class="song${index > 0 && index % 2 === 0 ? ' page-break' : ''}">
                            <div class="song-title">${escapeHtml(song.title)}</div>
                            <div class="song-lyrics">${formatLyrics(song.lyrics)}</div>
                        </div>
                    `).join('')}
                </body>
                </html>
            `);
            printWindow.document.close();
            setTimeout(() => { printWindow.print(); }, 250);
        }
        <% } %>

        <% if (site.features.download) { %>
        function downloadLyrics(songId, event) {
            event.stopPropagation();
            const song = getSongById(songId);
            if (!song) return;

            const text = `${song.title}\n\n${song.lyrics}`;
            const blob = new Blob([text], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `${song.title.replace(/[^a-z0-9]/gi, '_').toLowerCase()}.txt`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        function downloadAll() {
            if (songs.length === 0) return;

            const listName = document.getElementById('pageTitle').textContent;
            const sortedSongs = [...songs].sort((a, b) => a.title.localeCompare(b.title));

            let text = `${listName}\n${'='.repeat(listName.length)}\n\n`;
            sortedSongs.forEach((song, index) => {
                if (index > 0) { text += '\n\n---\n\n'; }
                text += `${song.title}\n\n${song.lyrics}`;
            });

            const blob = new Blob([text], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `${listName.replace(/[^a-z0-9]/gi, '_').toLowerCase()}.txt`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }
        <% } %>

        async function copyLyrics(songId, event) {
            event.stopPropagation();
            const song = getSongById(songId);
            if (!song) return;

            const text = `${song.title}\n\n${song.lyrics}`;
            try {
                await navigator.clipboard.writeText(text);
                const btn = event.currentTarget;
                btn.classList.add('success');
                btn.innerHTML = `<svg viewBox="0 0 24 24" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg> Copied!`;
                setTimeout(() => {
                    btn.classList.remove('success');
                    btn.innerHTML = `<svg viewBox="0 0 24 24" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg> ${labels.copy}`;
                }, 2000);
            } catch (err) {
                showToast('Failed to copy', 'error');
            }
        }

        async function shareSong(songId, event) {
            event.stopPropagation();
            const song = getSongById(songId);
            if (!song) return;

            const url = window.location.origin + basePath + `/list.html?id=${listId}#song-${songId}`;
            try {
                await navigator.clipboard.writeText(url);
                const btn = event.currentTarget;
                btn.classList.add('success');
                btn.innerHTML = `<svg viewBox="0 0 24 24" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg> Link Copied!`;
                setTimeout(() => {
                    btn.classList.remove('success');
                    btn.innerHTML = `<svg viewBox="0 0 24 24" stroke-width="2"><path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8M16 6l-4-4-4 4M12 2v13"/></svg> ${labels.shareLink}`;
                }, 2000);
            } catch (err) {
                showToast('Failed to copy link', 'error');
            }
        }

        const fontSizes = {};
        function changeFontSize(songId, delta, event) {
            event.stopPropagation();
            const lyricsEl = document.getElementById(`lyrics-${songId}`);
            if (!lyricsEl) return;

            const currentSize = fontSizes[songId] || 15;
            const newSize = Math.max(12, Math.min(24, currentSize + (delta * 2)));

            fontSizes[songId] = newSize;
            lyricsEl.style.fontSize = `${newSize}px`;
        }

        <% if (site.features.print) { %>window.printAll = printAll;<% } %>
        <% if (site.features.download) { %>window.downloadAll = downloadAll;<% } %>
        window.toggleCard = toggleCard;
        window.toggleSortOrder = toggleSortOrder;
        <% if (site.features.print) { %>window.printLyrics = printLyrics;<% } %>
        <% if (site.features.download) { %>window.downloadLyrics = downloadLyrics;<% } %>
        window.copyLyrics = copyLyrics;
        window.shareSong = shareSong;
        window.changeFontSize = changeFontSize;
    </script>
    <script src="<%= site.basePath %>/js/theme.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head', { site, themeCSS }) %>
    <title><%= site.name %></title>
    <style>
        .welcome-header {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0.75rem 1rem;
            position: relative;
        }
        .welcome-header .menu-btn {
            position: absolute;
            left: 1rem;
        }
        .welcome-container {
            max-width: 500px;
            margin: 0 auto;
            padding: 1.5rem 1rem 2rem;
            text-align: center;
        }
        .welcome-title {
            font-size: 1.75rem;
            margin-bottom: 0.5rem;
        }
        .welcome-subtitle {
            color: var(--text-secondary);
            margin-bottom: 2rem;
        }
        .nav-links {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
        .nav-link {
            display: block;
            padding: 1rem 1.5rem;
            background: var(--card-bg);
            border-radius: 10px;
            border: var(--card-border);
            box-shadow: var(--shadow);
            text-decoration: none;
            color: var(--text-primary);
            font-weight: 500;
            transition: box-shadow 0.2s, transform 0.1s;
        }
        .nav-link:hover {
            box-shadow: var(--shadow-lg);
            transform: translateY(-1px);
        }
        .nav-link.primary {
            background: var(--primary-color);
            color: white;
            border-color: var(--primary-dark);
        }
        .nav-link .link-meta {
            font-size: 0.8125rem;
            font-weight: normal;
            opacity: 0.8;
            margin-top: 0.25rem;
        }
        .section-title {
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            color: var(--text-secondary);
            margin: 1.5rem 0 0.75rem;
            text-align: left;
        }
        .admin-footer {
            margin-top: 3rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--border-color);
        }
        .admin-footer a {
            color: var(--text-secondary);
            text-decoration: none;
            font-size: 0.875rem;
        }
        .admin-footer a:hover {
            color: var(--primary-color);
        }
    </style>
</head>
<body>
    <%- include('partials/side-menu', { site, activePage: 'home' }) %>

    <!-- Header with menu button -->
    <div class="welcome-header">
        <button class="menu-btn" id="menuBtn" aria-label="Open menu">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>

    <div class="welcome-container">
        <h1 class="welcome-title"><%= site.name %></h1>
        <p class="welcome-subtitle"><%= site.tagline %></p>

        <div class="nav-links">
            <a href="<%= site.basePath %>/catalog.html" class="nav-link primary">
                <%= site.labels.allSongs %>
                <div class="link-meta" id="songCount">Loading...</div>
            </a>

            <div class="section-title" id="listsSection" style="display: none;"><%= site.labels.songLists %></div>
            <div id="listLinks" style="display: flex; flex-direction: column; gap: 1rem;">
                <!-- Dynamic list links will be inserted here -->
            </div>
        </div>

        <% if (site.features.qrCodes) { %>
        <!-- QR Code Section -->
        <div class="qr-section" id="qrSection" style="margin-top: 2rem;">
            <h3 style="font-size: 0.875rem; color: var(--text-secondary); margin-bottom: 0.5rem;"><%= site.labels.shareThisPage %></h3>
            <img id="qrCode" src="" alt="QR Code" style="max-width: 120px; height: auto;">
        </div>
        <% } %>

        <% if (site.features.statistics) { %>
        <!-- Usage Statistics -->
        <div id="statsSection" style="margin-top: 2rem; padding: 1.5rem; background: var(--card-bg); border-radius: 10px; border: var(--card-border); box-shadow: var(--shadow); text-align: left; display: none;">
            <h3 style="font-size: 0.875rem; font-weight: 600; color: var(--text-secondary); margin-bottom: 1rem;">USAGE STATISTICS</h3>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1rem;">
                <div>
                    <div style="font-size: 1.5rem; font-weight: 600; color: var(--primary-color);" id="totalSongViews">-</div>
                    <div style="font-size: 0.8125rem; color: var(--text-secondary);">Song Views</div>
                </div>
                <div>
                    <div style="font-size: 1.5rem; font-weight: 600; color: var(--primary-color);" id="totalListViews">-</div>
                    <div style="font-size: 0.8125rem; color: var(--text-secondary);">List Views</div>
                </div>
            </div>
            <div id="topSongs" style="margin-top: 1rem;">
                <div style="font-size: 0.75rem; font-weight: 600; color: var(--text-secondary); margin-bottom: 0.5rem;">TOP SONGS</div>
                <div id="topSongsList" style="font-size: 0.8125rem; color: var(--text-primary);"></div>
            </div>
            <div id="topLists" style="margin-top: 1rem;">
                <div style="font-size: 0.75rem; font-weight: 600; color: var(--text-secondary); margin-bottom: 0.5rem;">TOP LISTS</div>
                <div id="topListsList" style="font-size: 0.8125rem; color: var(--text-primary);"></div>
            </div>
        </div>
        <% } %>

        <% if (site.features.admin) { %>
        <div class="admin-footer">
            <a href="<%= site.basePath %>/admin.html"><%= site.labels.adminPanel %></a>
        </div>
        <% } %>
    </div>

    <script>
        const menuBtn = document.getElementById('menuBtn');
        const sideMenu = document.getElementById('sideMenu');
        const menuOverlay = document.getElementById('menuOverlay');
        const menuItems = document.getElementById('menuItems');
        const basePath = window.siteConfig.basePath;

        document.addEventListener('DOMContentLoaded', async () => {
            setupMenu();
            loadData();
            <% if (site.features.qrCodes) { %>loadQrCode();<% } %>
            <% if (site.features.statistics) { %>loadStats();<% } %>
        });

        function setupMenu() {
            menuBtn.addEventListener('click', toggleMenu);
            menuOverlay.addEventListener('click', closeMenu);
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') closeMenu();
            });
        }

        function toggleMenu() {
            sideMenu.classList.toggle('active');
            menuOverlay.classList.toggle('active');
        }

        function closeMenu() {
            sideMenu.classList.remove('active');
            menuOverlay.classList.remove('active');
        }

        async function loadData() {
            // Load song count
            try {
                const songsRes = await fetch(basePath + '/api/songs');
                const songs = await songsRes.json();
                document.getElementById('songCount').textContent = `${songs.length} song${songs.length !== 1 ? 's' : ''}`;
            } catch (e) {
                document.getElementById('songCount').textContent = '';
            }

            // Load lists
            try {
                const listsRes = await fetch(basePath + '/api/lists');
                const lists = await listsRes.json();

                if (lists.length > 0) {
                    document.getElementById('listsSection').style.display = 'block';
                    const listLinks = document.getElementById('listLinks');
                    listLinks.innerHTML = lists.map(list => `
                        <a href="${basePath}/list.html?id=${list.id}" class="nav-link">
                            ${escapeHtml(list.name)}
                            <div class="link-meta">${list.songIds.length} song${list.songIds.length !== 1 ? 's' : ''}</div>
                        </a>
                    `).join('');

                    // Also add to menu
                    renderMenuLists(lists);
                }
            } catch (e) {
                console.error('Error loading lists:', e);
            }
        }

        function renderMenuLists(lists) {
            const listSection = menuItems.querySelector('.menu-section-title');
            lists.forEach(list => {
                const link = document.createElement('a');
                link.href = `${basePath}/list.html?id=${list.id}`;
                link.className = 'menu-item list-link';
                link.textContent = list.name;
                listSection.after(link);
            });
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        <% if (site.features.qrCodes) { %>
        async function loadQrCode() {
            try {
                const response = await fetch(basePath + '/api/qr/home');
                const data = await response.json();
                document.getElementById('qrCode').src = data.qrCode;
            } catch (error) {
                document.getElementById('qrSection').style.display = 'none';
            }
        }
        <% } %>

        <% if (site.features.statistics) { %>
        async function loadStats() {
            try {
                const response = await fetch(basePath + '/api/stats');
                const stats = await response.json();

                // Only show stats if there's actual usage
                if (stats.totalSongViews > 0 || stats.totalListViews > 0) {
                    document.getElementById('statsSection').style.display = 'block';
                    document.getElementById('totalSongViews').textContent = stats.totalSongViews;
                    document.getElementById('totalListViews').textContent = stats.totalListViews;

                    // Show top songs
                    if (stats.topSongs.length > 0) {
                        document.getElementById('topSongsList').innerHTML = stats.topSongs
                            .slice(0, 5)
                            .map(item => `
                                <div style="display: flex; justify-content: space-between; padding: 0.25rem 0;">
                                    <span>${escapeHtml(item.song.title)}</span>
                                    <span style="color: var(--text-secondary);">${item.views} view${item.views !== 1 ? 's' : ''}</span>
                                </div>
                            `).join('');
                    } else {
                        document.getElementById('topSongs').style.display = 'none';
                    }

                    // Show top lists
                    if (stats.topLists.length > 0) {
                        document.getElementById('topListsList').innerHTML = stats.topLists
                            .slice(0, 5)
                            .map(item => `
                                <div style="display: flex; justify-content: space-between; padding: 0.25rem 0;">
                                    <span>${escapeHtml(item.list.name)}</span>
                                    <span style="color: var(--text-secondary);">${item.views} view${item.views !== 1 ? 's' : ''}</span>
                                </div>
                            `).join('');
                    } else {
                        document.getElementById('topLists').style.display = 'none';
                    }
                }
            } catch (error) {
                console.error('Error loading stats:', error);
            }
        }
        <% } %>
    </script>
    <script src="<%= site.basePath %>/js/theme.js"></script>
</body>
</html>

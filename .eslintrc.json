{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "indent": ["error", 4],
    "no-trailing-spaces": "error",
    "eol-last": ["error", "always"]
  },
  "ignorePatterns": ["node_modules/", "coverage/"]
}
